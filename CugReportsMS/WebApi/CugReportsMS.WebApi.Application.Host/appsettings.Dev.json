{
  "Logging": {
    "Logger": {
      "Options": {
        "Folder": "Logs",
        "FileName": "log_{date}.log"
      }
    },
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Serilog": {
    "Using":  [ "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.AspNetCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log.log",
          "outputTemplate": "{Timestamp:o} [{Level:u3}] ({Application}/{MachineName}/{ThreadId}) {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "{Timestamp:o} [{Level:u3}] ({Application}/{MachineName}/{ThreadId}) {Message}{NewLine}{Exception}"
        }
      }
    ]
  },
  "ConnectionStrings": {
    "ReportsMSDB": "PersistSecurityInfo=True;User ID=user;Password=pass;Data Source=address;Initial Catalog=catalog",
    "EcoSCADA_Demo": "PersistSecurityInfo=True;User ID=user;Password=pass;Data Source=address;Initial Catalog=catalog"
  },
  "Api": {
    "Microservices": {
      "ValuesMicroservice": {
        "Url" : "https://addr/values",
        "ApiKey": ""
      },
      "ConfigurationMicroservice": {
        "Url" : "https://addr/configuration",
        "ApiKey": ""
      },
      "EmailMicroservice": {
        "Url" : "http://addr",
        "ApiKey": ""
      },
      "MetadataMicroservice": {
        "Url" : "https://addr",
        "ApiKey": "key"
      },
      "ReportGenerator": {
        "Url" : "https://localhost:7115",
        "ApiKey": ""
      },
      "ChartGenerator": {
        "Url" : "https://localhost:7029",
        "ApiKey": ""
      },
      "CugReportsMS": {
        "Url" : "https://localhost:5001",
        "ApiKey": ""
      }
    },
    "EcoscadaApiKey": "key"
  },
  "MailSender" : {
    "EnableSending" : true
  },
  "Folders":{
    "Tasks" : "C:/RFTasks"
  },
  "ReportConfigMS": {
    "RunOnStart" : false,
    "DelayMs" : 3600000
  }
}
